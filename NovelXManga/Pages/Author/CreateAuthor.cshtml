@page
@model NovelXManga.Pages.Author.CreateAuthorModel
@{
}
<link rel="stylesheet" href="~/css/CreatorStyle.css" asp-append-version="true" />

<script src="~/js/Author.js" asp-append-version="true"></script>

<form method="post" enctype="multipart/form-data" class="CreatorTopMargin">
    <input type="hidden" name="MangaID" value="@Model.MangaID" />
    <div id="newRow">
        <input type="hidden" id="total" value="0" />
    </div>
    <div id="formRows"></div> 
    <input type="submit" class="btn btn-primary" value="Post" />
</form>
<button id="addRow" type="button" asp-for="Author" class="btn btn-info">Add New Author</button>

