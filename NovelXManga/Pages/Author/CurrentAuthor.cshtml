                        }
                    </div>
                }
                else
                {
                    <img class="CUS-manga-img" src="~/Images/AuthorImage/NoPhoto.png" alt="No Author Image Available">
                }
            </div>

            <div class="CUS-manga-title CUS-HideTitleCurrentMangaOnSmall">
                <!-- Manga title goes here -->
                @if (@Model.CurrentAuthor.FirstName != null && @Model.CurrentAuthor.LastName != null)
                {
