@page
@model NovelXManga.Pages.Register.AuthorRegisterModel
@{
}




<div class="container mt-5">
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-1g-4">

            <h1>Register User</h1>
            <form method="post">
                <div class="text-danger" asp-validation-summary="All"></div>
                <div class="mb-3">
                    <label class="form-label" asp-for="RegiModel.Email">Email Adress</label>
                    <input type="email" asp-for="RegiModel.Email" class="form-control" />
                    <span asp-validation-for="RegiModel.Email" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.FirstName">Name</label>
                    <input type="text" asp-for="Model.FirstName" class="form-control" />
                    <span asp-validation-for="Model.FirstName" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="Model.LastName">Family Name</label>
                    <input type="text" asp-for="Model.LastName" class="form-control" />
                    <span asp-validation-for="Model.LastName" class="text-danger"></span>

                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="RegiModel.Password">Password</label>
                    <input type="password" asp-for="RegiModel.Password" class="form-control" />
                    <span asp-validation-for="RegiModel.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="RegiModel.ConfirmPassword">Confirm Password</label>
                    <input type="password" asp-for="RegiModel.ConfirmPassword" class="form-control" />
                    <span asp-validation-for="RegiModel.ConfirmPassword" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <button type="submit" class="btn btn-primary">Register</button>
                </div>

            </form>
        </div>
    </div>
</div>

