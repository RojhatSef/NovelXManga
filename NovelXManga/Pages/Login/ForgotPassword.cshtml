@page
@model NovelXManga.Pages.Login.ForgotPasswordModel
@{
}

<div class="container mt-5">
   
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Forgot Password</h1>
            <form method="post">
                <div class="mb-3">
                    <label class="form-label" asp-for="@Model.forgotPasswordModel.Email">Email Adress</label>
                    <input type="email" asp-for="forgotPasswordModel.Email" class="form-control" />
                    <span asp-validation-for="forgotPasswordModel.Email" placeholder="Email" class="text-danger"></span>
                </div>        <div class="mb-3">
                    <button type="submit" class="btn btn-primary">submit</button>
                </div>
            </form>
        </div>

    </div>
</div>