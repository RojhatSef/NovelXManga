
@page
@inject SignInManager<IdentityUser> SignInManager
@model NovelXManga.Pages.Login.LoginIndexModel
@{
    ViewBag.Title = "User Login";
    var returnUrl = Model.ReturnUrl; 
   }
@*
@if (SignInManager.IsSignedIn(User))
{*@
<div class="container mt-5">
    <div class="text-danger" asp-validation-summary="ModelOnly"></div>
    <div class="row justify-content-center align-items-center">
        <div class="col-sm-12 col-md-12 col-lg-4">
            <h1 class="mb-3">Login</h1>

            <form asp-route-returnurl="@returnUrl" method="post">
                <label hidden asp-for="@Model.ReturnUrl"> </label>
                <div class="mb-3">
                    <label class="form-label" asp-for="LoginModel.Email">Email Adress</label>
                    <input type="text" asp-for="LoginModel.Email" class="form-control" />
                    <span asp-validation-for="LoginModel.Email" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <label class="form-label" asp-for="LoginModel.Password">Password</label>
                    <input type="password" asp-for="LoginModel.Password" class="form-control" />
                    <span asp-validation-for="LoginModel.Password" class="text-danger"></span>
                </div>
                <div class="mb-3">
                    <input type="checkbox" asp-for="LoginModel.RememberMe" class="form-check-input" />
                    <label class="form-check-label" asp-for="LoginModel.RememberMe">Remember Me</label>
                </div>
                <div class="mb-3">
                    <a class="btn" asp-area="" asp-page="/Login/ForgotPasswords">Forgott Password</a>
                    <button type="submit" class="btn btn-primary">Login</button>
                </div>
            </form>
        </div>

    </div>

    </div>
@*}
