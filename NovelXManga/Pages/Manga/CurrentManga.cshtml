        </div>
    }

    @if (Model.CurrentManga.ISBN10 != null)
    {
        <div class="mb-3">
            <label class="form-label" asp-for="@Model.CurrentManga.ISBN10">ISBN10: @Model.CurrentManga.ISBN10</label>

        </div>
    }

    @if (Model.CurrentManga.Type != null)
    {
        <div class="mb-3">
            <label class="form-label" asp-for="@Model.CurrentManga.Type">Type: @Model.CurrentManga.Type</label>

        </div>
    }

    @if (Model.CurrentManga.OriginalPublisher != null)
