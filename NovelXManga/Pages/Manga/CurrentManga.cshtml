</form>
<form method="post" asp-page-handler="RandomManga" asp-page="/MangaUpdates/UpdateCharacters" asp-route-id="@Model.CurrentManga.MangaID">
    @if (Model.CurrentManga.Characters != null)
    {
        foreach (var character in Model.CurrentManga.Characters)
        {    
             <input type="hidden" name="characters" value="@character.CharacterId" />
             <p>@character.CharacterName</p>
        }
    }
            else
            {
                <p>N/A</p>
            }
    <button type="submit">Update Characters</button>
</form>



 
