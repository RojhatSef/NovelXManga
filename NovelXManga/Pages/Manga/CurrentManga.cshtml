@page
@model NovelXManga.Pages.Manga.CurrentMangaModel
@{
}



<div class="container2">
    <div class="Left_Side">
        <div class="profileText">
            @if (@Model.CurrentManga.MangaName != null)
            {
                <h2>@Model.CurrentManga.MangaName</h2>
                @if (User.Identity.IsAuthenticated && User.IsInRole("Updater"))
                {
                    <input type="text" class="HiddenGroup" asp-for="@Model.CurrentManga.MangaName" class="form-control" />

                }

            }
            <div class="imgBx">
                @if (@Model.CurrentManga.PhotoPath != string.Empty)
                {
                        <div class="mb-3">
                        <img asp-append-version="true" src="~/Images/MangaImage/@Model.CurrentManga.PhotoPath" alt="NoImage" width="100" height="200">
                        @if (User.Identity.IsAuthenticated && User.IsInRole("Updater"))
                        {
                            <input type="text" class="HiddenGroup" asp-for="@Model.CurrentManga.PhotoPath" class="form-control" />

                        }

                        </div>
                }
                else
                {
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/a/ac/No_image_available.svg/1024px-No_image_available.svg.png" alt="BookImage" width="100" height="200">
                }
            </div>

                <div class="profileTextGroup">
                     <div class="InfoGroup">
                    <div class="Title">
                        <div class="Info">
                            <span class="icon">Language:   </span><br /><br />
                            <div class="text">
                                @if (Model.CurrentManga.AllLanguages != null)
                                {

                                    @foreach (var item in Model.CurrentManga.AllLanguages)
                                    {
                                                <p> @item.LanguageName</p>


                                    }
                                }
                                else
                                {
                            <span>N/A</span>
                                }
                            </div>
                        </div>
                    </div>
                </div>
                    <div class="InfoGroup"> 
                        <div class="Title">
                            <div class="Info">
                            <span class="icon">AssociatedNames  </span><br /><br />
                            <span class="text">
                                @if (Model.CurrentManga.AssociatedNames != null)
                                {
                                    @foreach (var item in Model.CurrentManga.AssociatedNames)
                                    {
                                                <a asp-page="CurrentManga" asp-route-id="@item.MangaID" class="btn btn-primary">@item.nameString ,</a>                                       
                                    }

                                }
                                else
                                {
                                        <span>N/A</span>
                                }
                            </span>
                            </div>
                        </div>
                    </div>
                </div>

        </div>
    </div>

    <div class="Right_Side">

    </div>







<div>AssociatedNames: </div>

<div> </div>
    @if (Model.CurrentManga.TagsModels != null)
    {

        @foreach (var item in Model.CurrentManga.TagsModels)
        {

                <label class="form-label" asp-for="@item.TagName"> @item.TagName | </label>

        }
    }
<div>Genre: </div>
    @if (Model.CurrentManga.GenresModels != null)
    {
        @foreach (var item in Model.CurrentManga.GenresModels)
        {

                <label class="form-label" asp-for="@item.GenreName"> @item.GenreName | </label>

        }

    }
    <div>studio/s: </div>
    @if (Model.CurrentManga.GenresModels != null)
    {
        @foreach (var item in Model.CurrentManga.StudioModels)
        {
            if (item.website != null)
            {
                            <a asp-for="@item.website"> Studio | </a>
            }
            else
            {
                            <p>N/A</p>
            }


        }

    }

    @if (Model.CurrentManga.Description != null)
    {
        <div class="mb-3">
            <label class="form-label" asp-for="@Model.CurrentManga.Description">Description: @Model.CurrentManga.Description</label>

        </div>
    }

    @if (Model.CurrentManga.ReleaseYear != null)
    {
        <div class="mb-3">
            <label class="form-label" asp-for="@Model.CurrentManga.ReleaseYear">Book Release: @Model.CurrentManga.ReleaseYear</label>

        </div>
    }
    @if (Model.CurrentManga.EndingYear != null)
    {
        <div class="mb-3">
            <label class="form-label" asp-for="@Model.CurrentManga.EndingYear">Ending: @Model.CurrentManga.EndingYear</label>
        </div>
